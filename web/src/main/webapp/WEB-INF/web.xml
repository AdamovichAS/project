<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>first app</display-name>


    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>by.itacademy.jd2.servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>by.itacademy.jd2.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>by.itacademy.jd2.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoleRedirectServlet</servlet-name>
        <servlet-class>by.itacademy.jd2.servlets.RoleRedirectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleRedirectServlet</servlet-name>
        <url-pattern>/redirect</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>by.itacademy.jd2.servlets.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>SessionAuthFilter</filter-name>
        <filter-class>by.itacademy.jd2.filters.SessionAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SessionAuthFilter</filter-name>
        <url-pattern>/user_menu.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SessionAuthFilter</filter-name>
        <url-pattern>/redirect</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SessionAuthFilter</filter-name>
        <url-pattern>/admin_menu.jsp</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CookieFilter</filter-name>
        <filter-class>by.itacademy.jd2.filters.CookieFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/user_menu.jsp</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/redirect</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CookieFilter</filter-name>
        <url-pattern>/user_menu.jsp</url-pattern>
    </filter-mapping>

</web-app>